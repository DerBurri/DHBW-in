@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="register-box">
    <div class="register-logo">
        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Register a new Account</p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="input-group mb-3"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Username"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Email" class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Password" class="fas fa-lock"></span>
                            </div>
                        </div>

                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Repeat Password"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.ConfirmPassword" class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Firstname" class="form-control" autocomplete="firstname" aria-required="true" placeholder="Vorname"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Firstname" class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Nachname"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Name" class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Street" class="form-control" autocomplete="street-address" aria-required="true" placeholder="Straße"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Street" class="fas fa-address-card"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Plz" class="form-control" autocomplete="plz" aria-required="true" placeholder="PLZ"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Plz" class="fas fa-address-card"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Stadt" class="form-control" autocomplete="stadt" aria-required="true" placeholder="Stadt"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Stadt" class="fas fa-address-card"></span>
                            </div>
                        </div>
                    </div>
                    @*<div class="input-group mb-3">
                        <input asp-for="Input.Profilepicture" class="form-control" autocomplete="new-password" aria-required="true" placeholder="TODO Profilbild"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Input.Profilepicture" class=""></span>
                            </div>
                        </div>
                    </div>*@
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrieren</button>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
