@model IEnumerable<DHB_Win.Models.BetOption>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descpription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuoteValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bet)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descpription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bet.BetId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OptionsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OptionsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OptionsId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
