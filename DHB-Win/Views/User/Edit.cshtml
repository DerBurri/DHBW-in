@model DHB_Win.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bearbeiten</h1>

<h4>Benutzer</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Uid"/>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" class="form-control"/>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMail" class="control-label"></label>
                <input asp-for="EMail" class="form-control"/>
                <span asp-validation-for="EMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control"/>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlzFk" class="control-label"></label>
                <select asp-for="PlzFk" class="form-control" asp-items="ViewBag.PlzFk"></select>
                <span asp-validation-for="PlzFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpPoints" class="control-label"></label>
                <input asp-for="ExpPoints" class="form-control"/>
                <span asp-validation-for="ExpPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control"/>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Walletbalance" class="control-label"></label>
                <input asp-for="Walletbalance" class="form-control"/>
                <span asp-validation-for="Walletbalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profilepicture" class="control-label"></label>
                <input asp-for="Profilepicture" class="form-control"/>
                <span asp-validation-for="Profilepicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sichern" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zum Profil</a>
</div>

