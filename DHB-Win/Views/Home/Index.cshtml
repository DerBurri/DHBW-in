                        </a>
                        <a class="btn btn-info btn-sm" asp-controller="Job" asp-action="Edit" asp-route-id="@item.JobId">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Bearbeiten
                        </a>
                        <a class="btn btn-danger btn-sm" asp-controller="Job" asp-action="Delete" asp-route-id="@item.JobId">
                            <i class="fas fa-trash">
                            </i>
                            Löschen
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

