

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //HOMEPAGE
}
&nbsp;&nbsp;
<section class="content">
    <img src="~/dist/img/AdminLTELogo.png">
    &nbsp;&nbsp;
    <h1>Wetten</h1>
  <table class="table table-striped projects">
    <thead>
        <tr>
            <th>
                Bet ID
            </th>
            <th>
                Titel       
            </th>
            <th>
                Beschreibung
            </th>
            <th>
               User
            </th>
            <th style="width:5%">
                Erfahrungspunkte
            </th>
            <th>
                Belohnung
            </th>
            <th>Optionen</th>

        </tr>
    </thead>
    <tbody>
        
     @foreach(@DHB_Win.Models.Bet item in ViewBag.Bets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem =>item.BetId)
                </td>
                <td>
                    <a>
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                    <br>
                    <small>Created @Html.DisplayFor(modelItem => item.CreationDate)</small>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UidFk2Navigation.Uid) @*Profilbild und Username hier rein?*@
                </td>

                <td class="project-state">
                    <span class="badge badge-success">@Html.DisplayFor(modelItem => item.ExpPoints)</span>
                </td>
                <td class="project_progress">
                    <div class="progress progress-sm">
                        <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@Html.DisplayFor(modelItem => item.Reward)" aria-valuemin="0" aria-valuemax="100" style="width:@Html.DisplayFor(modelItem => item.Reward)%">
                        </div>
                    </div>
                    <small>
                        @Html.DisplayFor(modelItem => item.Reward) Betcoins
                    </small>
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" asp-controller="Bet" asp-action="Details" asp-route-id="@item.BetId">
                        <i class="fas fa-folder">
                        </i>
                        Details
                    </a>
                    <a class="btn btn-info btn-sm" asp-controller="Bet" asp-action="Edit" asp-route-id="@item.BetId">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Bearbeiten
                    </a>
                    <a class="btn btn-danger btn-sm" asp-controller="Bet" asp-action="Delete" asp-route-id="@item.BetId">
                        <i class="fas fa-trash">
                        </i>
                        Löschen
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</section>
&nbsp;    &nbsp;
<section>
        <h1>Aufträge</h1>
        &nbsp;    &nbsp;
<table class="table table-striped projects">
    <thead>
        <tr>
