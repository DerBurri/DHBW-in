@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //HOMEPAGE
}
@foreach (@DHB_Win.Models.User item in ViewBag.User)
{
    <button type="button" class="btn btn-block bg-gradient-success btn-lg">@item.WalletBalance Betcoins</button>
}
&nbsp;&nbsp;
<section class="content">
    <img src="~/dist/img/AdminLTELogo.png">
    &nbsp;&nbsp;
    <h1>Claims</h1>
    <table>
        <tr>
            @foreach (var claim in User.Claims)
            {
                <td>@claim</td>
            }

        </tr>
    </table>

    <h1>Wetten</h1>
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th>
                    Bet ID
                </th>
                <th>
                    Titel
                </th>
                <th>
                    Beschreibung
                </th>
                <th>
                    User
                </th>
                <th style="width:5%">
                    Erfahrungspunkte
                </th>
                <th>
                    Belohnung
                </th>
                <th>Optionen</th>

            </tr>
        </thead>
        <tbody>

            @foreach (@DHB_Win.Models.Bet item in ViewBag.Bets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BetId)
                    </td>
                    <td>
                        <a>
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                        <br>
                        <small>Created @Html.DisplayFor(modelItem => item.CreationDate)</small>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>

                    <td class="project-state">
                        <span class="badge badge-success">@Html.DisplayFor(modelItem => item.ExpPoints)</span>
                    </td>
                    <td class="project_progress">
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@Html.DisplayFor(modelItem => item.Reward)" aria-valuemin="0" aria-valuemax="100" style="width:@Html.DisplayFor(modelItem => item.Reward)%">
                            </div>
                        </div>
                        <small>
                            @Html.DisplayFor(modelItem => item.Reward) Betcoins
                        </small>
                    <td>
           
                           @*
                                <div class="dropdown-menu" role="menu">
                                        @foreach (@DHB_Win.Models.BetOption option in ViewBag.bet)
                                        {
                                             <a class="dropdown-item" href="#"></a>
                                        }
                                        <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                  
                                </div>          *@        
                    </td>

                    <td class="project-actions text-right">
                        <a class="btn btn-primary btn-sm" asp-controller="Bet" asp-action="Details" asp-route-id="@item.BetId">
                            <i class="fas fa-folder">
                            </i>
                            Details
                        </a>
                        <a class="btn btn-info btn-sm" asp-controller="Bet" asp-action="Edit" asp-route-id="@item.BetId">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Bearbeiten
                        </a>
                        <a class="btn btn-danger btn-sm" asp-controller="Bet" asp-action="Delete" asp-route-id="@item.BetId">
                            <i class="fas fa-trash">
                            </i>
                            Löschen
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
&nbsp; &nbsp;
<section>
    <h1>Aufträge</h1>
    &nbsp; &nbsp;
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th>
                    Job ID
                </th>
                <th>
                    Titel
                </th>
                <th>
                    Beschreibung
                </th>
                <th>
                    Anbieter
